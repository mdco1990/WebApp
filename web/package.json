{
  "name": "webapp-ui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:source": "eslint src --ext .ts,.tsx --ignore-pattern '**/__tests__/**' --ignore-pattern '**/*.test.*' --ignore-pattern '**/*.spec.*' --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ci": "NODE_OPTIONS=--max-old-space-size=4096 vitest --coverage --run",
    "test:ui": "vitest --ui",
    "lint:fix": "eslint . --fix",
    "lint:css": "stylelint \"src/**/*.{css,scss}\" --max-warnings 0",
    "lint:css:fix": "stylelint \"src/**/*.{css,scss}\" --fix",
    "lint:strict": "eslint . --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "lint:all": "npm run lint && npm run lint:css",
    "lint:all:fix": "npm run lint:fix && npm run lint:css:fix"
  },
  "dependencies": {
    "bootstrap": "5.3.3",
    "bootstrap-icons": "^1.13.1",
    "chart.js": "^4.5.0",
    "i18next": "^23.12.2",
    "react": "18.2.0",
    "react-bootstrap": "^2.10.4",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "18.2.0",
    "react-i18next": "^13.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.2.0",
    "@types/react": "18.2.55",
    "@types/react-dom": "18.2.19",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "connect-history-api-fallback": "^2.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.23.1",
    "stylelint-config-recommended-scss": "^16.0.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-order": "^6.0.4",
    "terser": "^5.43.1",
    "typescript": "5.5.4",
    "typescript-eslint": "^8.39.0",
    "vite": "^6.3.5",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-stylelint": "^6.0.2",
    "vitest": "^3.2.4"
  }
}

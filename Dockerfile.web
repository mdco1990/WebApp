FROM node:18-alpine

# Keep the workdir aligned with docker-compose service
WORKDIR /app/web

# Copy only manifests first for better caching
COPY web/package*.json ./

# Install all deps (including dev) for Vite dev server
RUN npm ci

# Copy the rest of the app
COPY web/ .

EXPOSE 5173
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]
